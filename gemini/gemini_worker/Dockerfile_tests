ARG BUILDTAG=build
FROM gemini_worker:${BUILDTAG}
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

WORKDIR /usr/src/app/

COPY gemini/.pylintrc gemini/.coveragerc ./gemini/
COPY gemini/gemini_worker/pyproject.toml gemini/gemini_worker/uv.lock ./gemini/gemini_worker/

RUN uv --project gemini/gemini_worker sync --locked
